<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/one_and_a_half_grid_unit"
        android:paddingLeft="@dimen/three_grid_unit"
        android:paddingRight="@dimen/one_and_a_half_grid_unit"
        android:paddingTop="@dimen/one_and_a_half_grid_unit"
        android:singleLine="true"
        android:textSize="15sp"
        tools:text="Item"
        tools:textColor="@android:color/black" />
    
    <ImageView 
        android:id="@+id/img_remindtime_checkd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/one_and_a_half_grid_unit"
        android:src="@drawable/check"
        android:visibility="invisible" />

</LinearLayout>